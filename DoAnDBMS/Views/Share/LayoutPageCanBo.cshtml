<!DOCTYPE html>

@{
    DoAnDBMS.Models.CANBO CB = Session["Account"] as DoAnDBMS.Models.CANBO;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- Navbar chính -->
    <nav class="navbar navbar-expand-sm bg-success navbar-dark">
        <a class="navbar-brand" href="@Url.Action("TrangChuCanBo","TrangChu")">HỆ THỐNG QUẢN LÝ KÝ TÚC XÁ</a>
        <div class="col-8">
            <ul class="navbar-nav">
                <!-- Đăng nhập -->
                <li class="nav-item ms-auto">
                    @if (CB != null)
                    {
                        <div class="text-white">Cán Bộ: @CB.TENCB</div>
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("DangXuat","CanBo")">Đăng Xuất</a>
                    }
                    else
                    {
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("DangNhap","CanBo")">
                            Đăng Nhập
                        </a>
                    }

                </li>
            </ul>
        </div>
    </nav>

    <!-- Thanh điều hướng ngang (Sidenav) bên dưới Navbar chính nếu đăng nhập thành công-->
    @if (CB != null)
    {
        <nav class="navbar navbar-expand-sm bg-success navbar-dark">
            <div class="container">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("CanBo", "CanBo")">Cán bộ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("NhanVien", "CanBo")">Nhân viên</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("DayPhong", "CanBo")">Dãy phòng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("Phong", "CanBo")">Phòng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("DonGia", "CanBo")">Đơn giá</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("HoTro", "CanBo")">Hỗ trợ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("HoaDonDienNuoc", "CanBo")">Hóa đơn điện nước</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("HoaDonPhong", "CanBo")">Hóa đơn phòng</a>
                    </li>
                </ul>
            </div>
        </nav>
    }
    <div>
        @RenderBody()
    </div>
</body>
</html>
