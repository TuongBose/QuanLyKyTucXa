<!DOCTYPE html>

@{
    DoAnDBMS.Models.NHANVIEN NV = Session["Account"] as DoAnDBMS.Models.NHANVIEN;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- Navbar chính -->
    <nav class="navbar navbar-expand-sm bg-success navbar-dark">
        <a class="navbar-brand" href="@Url.Action("TrangChuNhanVien","TrangChu")">HỆ THỐNG QUẢN LÝ KÝ TÚC XÁ</a>
        <div class="col-8">
            <ul class="navbar-nav">
                <!-- Đăng nhập -->
                <li class="nav-item ms-auto">
                    @if (NV != null)
                    {
                        <div class="text-white">Nhân Viên: @NV.TENNV</div>
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("DangXuat","NhanVien")">Đăng Xuất</a>
                    }
                    else
                    {
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("DangNhap","NhanVien")">
                            Đăng Nhập
                        </a>
                    }

                </li>
            </ul>
        </div>
    </nav>

    <!-- Thanh điều hướng ngang (Sidenav) bên dưới Navbar chính nếu đăng nhập thành công-->
    @if (NV != null)
    {
        <nav class="navbar navbar-expand-sm bg-success navbar-dark">
            <div class="container">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("ThemChiSoDienNuocCongTo", "NhanVien")">Thêm chỉ số điện nước công tơ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("HoaDonDienNuoc", "NhanVien")">Hóa đơn điện nước</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("HoaDonPhong", "NhanVien")">Hóa đơn phòng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("DayPhong", "NhanVien")">Dãy phòng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("Phong", "NhanVien")">Phòng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("NhanVien", "NhanVien")">Nhân viên</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("DonGia", "NhanVien")">Đơn giá</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("HoTro", "NhanVien")">Hỗ trợ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("SinhVien", "NhanVien")">Sinh viên</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary mx-2" href="@Url.Action("ThanNhan", "NhanVien")">Thân Nhân</a>
                    </li>
                </ul>
            </div>
        </nav>
    }
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
