@model IEnumerable<DoAnDBMS.Models.VIEW_SINHVIEN>
@{
    ViewBag.Title = "SinhVien";
    Layout = "~/Views/Share/LayoutPageCanBo.cshtml";
}

<style>
    .text-right {
        margin-bottom: 10px;
    }
</style>

<div class="content">
    <div class="card shadow p-4">
        <h1 class="text-center">Sinh viên</h1>
        <br />
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Message"]
            </div>
        }
        <hr />
        <table class="table table-bordered table-striped table-hover">
            <tr class="table table-dark">
                <th>Mã sinh viên</th>
                <th>Phòng</th>
                <th>Tên sinh viên</th>
                <th>Giới tính</th>
                <th>CMND_CCCD</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Ngày làm hợp đồng</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MASV</td>
                    <td>@item.MAPHONG</td>
                    <td>@item.TENSV</td>
                    @if (item.GIOITINH == true)
                    {
                        <td>Nam</td>
                    }
                    else
                    {
                        <td>Nữ</td>
                    }
                    <td>@item.CMND_CCCD</td>
                    <td>@item.EMAIL</td>
                    <td>@item.SDT</td>
                    <td>@DateTime.Parse(item.NGAYLAMHOPDONG.ToString()).ToShortDateString()</td>
                </tr>
            }
        </table>
    </div>
</div>
